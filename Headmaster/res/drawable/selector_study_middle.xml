<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
<item android:drawable="@drawable/shape_study_content_selected" android:state_checkable="true" android:state_pressed="true" android:state_selected="true"/>
    <item android:drawable="@drawable/shape_study_content_default" />
    -->

    <item  android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/blue"></solid>
            <corners android:radius="0dp" />
            <stroke
                android:color="@color/blue"
                android:width="1dp"
                ></stroke>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"
                ></padding>
        </shape>
    </item>

    <item  android:state_checked="true">
        <shape android:shape="rectangle" >
            <solid android:color="@color/blue"></solid>
            <corners
                android:radius="0dp" />
            <stroke
                android:color="@color/blue"
                android:width="1dp"
                ></stroke>
            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="5dp"
                android:right="5dp"
                ></padding>
        </shape>
    </item>

    <item 
        >
        <layer-list>

            <!-- 连框颜色值 -->
            <item><shape>
                    <solid android:color="@color/line_color"></solid>
                </shape></item>
                
            <!-- 主体背景颜色值 -->
            <item android:bottom="1dp" android:top="1dp">
                
                <shape>
                    
                    <solid android:color="@color/white" />
                </shape>
                
                </item>
        </layer-list>
        


    </item>

</selector>