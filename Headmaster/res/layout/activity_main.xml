<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.jzjf.headmaster.MainActivity" >

    <!-- android:background="@drawable/main_bg" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include layout="@layout/title_main" />

        <com.jzjf.headmaster.view.NoScrollViewPager
            android:id="@+id/vp_content_pagers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color" />

        <RadioGroup
            android:id="@+id/rg_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fafafa"
            android:orientation="horizontal"
            android:paddingTop="4dp" >

            <RadioButton
                android:id="@+id/rb_bottom_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/selector_bottom_data"
                android:gravity="center"
                android:text="统计"
                android:textColor="@drawable/selector_text_color"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_bottom_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_bottom_news"
                android:gravity="center"
                android:text="资讯"
                android:textColor="@drawable/selector_text_color"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_bottom_chatter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_bottom_chatter"
                android:gravity="center"
                android:text="消息"
                android:textColor="@drawable/selector_text_color"
                android:textSize="10sp" />
        </RadioGroup>
    </LinearLayout>

    <!--
         <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.jzjf.headmaster.fragment.LeftFragment"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        tools:layout="@layout/left_content" />
    -->

    <FrameLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff" >

        <include layout="@layout/left_content" />
    </FrameLayout>

</android.support.v4.widget.DrawerLayout>