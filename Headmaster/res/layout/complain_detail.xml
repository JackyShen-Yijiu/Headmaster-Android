<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#e8eced"
    android:layout_height="match_parent" >
    
<RelativeLayout 
    android:id="@+id/rl_head"
    android:layout_width="match_parent"
    android:background="@color/bg_black"
    android:layout_height="123dp">
    
    <LinearLayout 
        android:id="@+id/ll_student"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="28dp"
        android:layout_height="wrap_content">
     <com.joooonho.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_student"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/head_null"
        app:sriv_border_color="#00000000"
        app:sriv_border_width="1dip" />
    <TextView 
        android:id="@+id/tv_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="sad"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"/>
    </LinearLayout>
    
    <ImageView 
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/talk_complaint"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/ll_student"
        android:layout_alignTop="@+id/ll_student"/>
    
      <ImageView 
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:src="@drawable/direction"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
      
     <LinearLayout 
        android:id="@+id/ll_coach"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="66dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
    
    <com.joooonho.SelectableRoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_coach"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/head_null"
        app:sriv_border_color="#00000000"
        app:sriv_border_width="1dip" />
    <TextView 
        android:id="@+id/tv_coach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="sad"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"/>
    </LinearLayout>
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
     android:layout_below="@+id/rl_head"
     android:padding="16dp"
     android:background="@color/white"
    android:layout_height="wrap_content">
     
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投诉内容"
        android:textSize="14sp"
        android:textColor="@color/text_color_light_black"/>
  <TextView
        android:id="@+id/complain_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="asdsad"
        android:textColor="@color/text_color_light_black"
        android:textSize="12sp" />
  
  <TextView 
        android:id="@+id/complain_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dasdas"
        android:layout_below="@+id/complain_time"
        android:layout_marginTop="14dp"
        android:textColor="@color/text_color_dark_black"
        android:textSize="14sp"/>
        <ImageView 
        android:id="@+id/iv_one"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_below="@+id/complain_content"
        android:layout_marginTop="12dp"
        android:onClick="onClick"
        android:visibility="gone"
        />
    
      <ImageView 
        android:id="@+id/iv_two"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_toRightOf="@+id/iv_one"
        android:layout_marginLeft="14dp"
        android:onClick="onClick"
         android:visibility="gone"
        android:layout_alignBottom="@+id/iv_one"
        />
</RelativeLayout>
</RelativeLayout>
