        <TextView 
            android:id="@+id/learn_kemu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/textView_name"
            android:layout_below="@+id/textView_name"
            android:textColor="@color/new_gray"
            android:text="科目二 科目三"/>
          <TextView 
            android:id="@+id/learn_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/textView_name"
            android:layout_below="@+id/learn_kemu"
            android:textColor="@color/new_gray"
            android:text="通过率"/>
        <ImageView 
            android:id="@+id/imageView_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_phone"
            android:layout_toLeftOf="@+id/imageView_phone"
            android:layout_marginRight="16dp"
            android:src="@drawable/chat"/>
          <ImageView 
            android:id="@+id/imageView_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_below="@+id/imageView_star"
			android:layout_marginTop="12dp"
            android:src="@drawable/phone"/>
        <View
        android:id="@+id/iv_item_deviderline"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView_head"
        android:background="@drawable/line" />

