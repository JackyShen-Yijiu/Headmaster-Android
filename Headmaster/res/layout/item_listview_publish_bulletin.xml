<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selector"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_bulletin_item_deviderline"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_bulletin_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="标题"
        android:textColor="@color/text_green_light_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_bulletin_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        
        android:text="2015/12/12"
        android:textColor="@color/text_gray_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bulletin_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="12dp"
        android:text="如果你无法简单地表达你的想法，那只能说明你还不公了解它。 --阿尔伯特.爱因斯坦"
        android:textColor="@color/text_white_dark_color"
        android:textSize="14sp" />


</LinearLayout>