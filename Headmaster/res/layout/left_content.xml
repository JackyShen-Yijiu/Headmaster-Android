<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_side"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/my_rl_xingxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp" >

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/iv_left_head_portrait"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="36dp"
            android:src="@drawable/head_headmaster_null"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coach_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coach_name"
            android:layout_below="@+id/coach_name"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="21dp" >
        </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/my_rl_coach"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="98dp"
        android:drawableLeft="@drawable/coach"
        android:drawablePadding="17dp"
        android:gravity="center_vertical"
        android:text="教练"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/my_rl_complain"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/complaint"
        android:drawablePadding="17dp"
        android:gravity="center_vertical"
        android:text="投诉"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/my_rl_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/set"
        android:drawablePadding="17dp"
        android:gravity="center_vertical"
        android:text="设置"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>