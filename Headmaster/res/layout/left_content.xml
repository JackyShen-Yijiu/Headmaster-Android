<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/sbg"
    android:layout_gravity="left"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/my_rl_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/my_rl_xingxi" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="38dp"
                android:drawableLeft="@drawable/notice"
                android:drawablePadding="15dp"
                android:text="发布公告"
                android:textSize="16sp"
                android:textColor="#bfbfbf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_coach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_notice" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="38dp"
                android:drawableLeft="@drawable/coach"
                android:drawablePadding="15dp"
                android:text="我的教练"
                android:textSize="16sp"
                android:textColor="#bfbfbf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_rl_coach" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginTop="38dp"
                android:drawableLeft="@drawable/setting"
                android:drawablePadding="15dp"
                android:text="设置"
                android:textSize="16sp"
                android:textColor="#bfbfbf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_rl_xingxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="58dp" >

            <ImageView
                android:id="@+id/iv_left_head_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/left_title" />

            <FrameLayout
                android:id="@+id/iv_left_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="21dp" >
            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>