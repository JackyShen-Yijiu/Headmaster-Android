<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.jzjf.headmaster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/tv_data_current_enroll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#000"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_data_current_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日报名"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_data_current_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="#19f9cc"
                android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_datas_header"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_below="@+id/tv_data_current_enroll" >

            <LinearLayout
                android:id="@+id/ll_data_subjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_data_subject1_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#19f9cc"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_data_subject1_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="科一在学"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_data_subject2_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#19f9cc"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_data_subject2_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="科二在学"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_data_subject3_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#19f9cc"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_data_subject3_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="科三在学"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_data_subject4_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#19f9cc"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_data_subject4_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="科四在学"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_curr_pass_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_datas_header"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12sp"
            android:layout_marginTop="12sp"
            android:text="当前合格率"
            android:textSize="14sp" />
        <!-- 四个圆环 -->

        <LinearLayout
            android:id="@+id/ll_circle_layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_curr_pass_percent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    custom:donut_finished_stroke_width="7dp"
                    custom:donut_unfinished_stroke_width="4dp"
                    custom:donut_unfinished_color="#f7f7f7"
                    custom:donut_progress="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="科目一"
                    android:textSize="@dimen/text_middle_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积压："
                        android:textSize="@dimen/text_middle_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#f00"
                        android:textSize="@dimen/text_middle_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textSize="@dimen/text_middle_size" />
                </LinearLayout>
                </LinearLayout>

            <ImageView 
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2a2a2a"
                android:layout_marginBottom="10dp"/>
            
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    custom:donut_finished_stroke_width="7dp"
                    custom:donut_unfinished_stroke_width="4dp"
                    custom:donut_unfinished_color="#f7f7f7"
                    custom:donut_progress="30" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="科目二"
                    android:textSize="@dimen/text_middle_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积压："
                        android:textSize="@dimen/text_middle_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#f00"
                        android:textSize="@dimen/text_middle_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textSize="@dimen/text_middle_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        
        <TextView
            android:id="@+id/assess_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_circle_layout"
            android:layout_centerHorizontal="true"
            android:text="学员评价"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/data_star_ll"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/assess_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <!-- 第一个星 -->

            <LinearLayout
                android:id="@+id/data_star_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_goodcommnent_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#19f9cc"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/good"
                    android:drawablePadding="6dp"
                    android:text="好评"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2a2a2a" />
            <!-- 第二个星 -->

            <LinearLayout
                android:id="@+id/data_star_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_generalcomment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#19f9cc"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/well"
                    android:drawablePadding="6dp"
                    android:text="中评"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2a2a2a" />
            <!-- 第三个星 -->

            <LinearLayout
                android:id="@+id/data_star_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/data_badcomment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#19f9cc"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/bad"
                    android:drawablePadding="6dp"
                    android:text="差评"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
            <!-- 第四个星 -->
        </LinearLayout>
    </RelativeLayout>

</ScrollView>