<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/coach_icon_talk_rl"
        android:layout_width="48dp"
        android:layout_height="48dp" 
         android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            >

        <ImageView
            android:id="@+id/coach_detail_image"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/assess_title" />

        <ImageView
            android:id="@+id/imageView_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/assess_new" />
    </RelativeLayout>

    <View
        android:id="@+id/iv_item_deviderline"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/coach_icon_talk_rl"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/line"  />

    <TextView
        android:id="@+id/textView_coach_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView__coach_star"
        android:layout_alignTop="@+id/coach_icon_talk_rl"
        android:text="毛云娇"
        android:textColor="#bfbfbf"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/imageView__coach_star"
        style="@style/roomRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_coach_name"
        android:layout_centerHorizontal="true"
        android:isIndicator="true"
        android:rating="0" />

    <TextView
        android:id="@+id/textView_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView__coach_star"
        android:layout_marginRight="18dp"
        android:text="课时"
        android:textColor="#bfbfbf"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_subject"
        android:layout_toLeftOf="@+id/textView_subject"
        android:text="19"
        android:textColor="#bfbfbf"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView__coach_star"
        android:layout_marginTop="16dp" >

        <TextView
            android:id="@+id/textView_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:text="好评0"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/textView_good"
            android:text="中评0"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/textView_complain"
            android:text="差评0"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:text="投诉0"
            android:textColor="#bfbfbf"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>